@model IEnumerable<JobPortal.Models.JobPostActivity>

@{
    ViewData["Title"] = "Tìm việc";
}

<div class="tab-wrapper">
    <div class="d-flex align-content-center justify-content-between myjob-container">
        <div class="ant-tabs ant-tabs-top">
            <div role="tablist" class="ant-tabs-nav">
                <div class="ant-tabs-nav-wrap">
                    <div class="ant-tabs-nav-list" style="transform: translate(0px, 0px);">
                        <div class="ant-tabs-tab ant-tabs-tab-active">
                            <div role="tab" aria-selected="true" class="ant-tabs-tab-btn" tabindex="0" id="rc-tabs-1-tab-1" aria-controls="rc-tabs-1-panel-1">
                                Vị trí đã ứng tuyển (@Model.Count())
                            </div> 
                        </div>
                        <div class="ant-tabs-ink-bar ant-tabs-ink-bar-animated" style="left: 0px; width: 130px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="wrapper-container mt-3">
    <div class=" row justify-content-center">
        <div class=" col-12 col-md-12">
            <div class="view-list">
                <div>
                    <div class="position-relative" >
                        @foreach (var item in Model) {  
                            <div class="row">
                                    <div class="col col-12 d-block">
                                        <div class="job-list-card" role="button">
                                            <div class="card-header">
                                                <div class="d-flex">
                                                    <div class="company-info">
                                                        <div class="company-info-logo">
                                                            <a class="avatar"  id="JOB_CARD_BUTTON_VIEW_CLIENT_LOGO-32545" href=@Html.DisplayFor(modelItem => item.JobPost.Company.CompanyWebsiteUrl) target="_blank">
                                                                <div style="position:relative">
                                                                    <div style="width:64px;height:64px;margin:auto;overflow:hidden;border-radius:5px;border-width:1px;border-style:solid;border-color:#e8e8e8"
                                                                    class="jsx-2287091654 desktop-logo-company logo-company d-flex align-items-center">
                                                                        <img src=@Html.DisplayFor(modelItem => item.JobPost.Company.CompanyLogoUrl) style="max-width:100%" class="jsx-2287091654">
                                                                    </div>
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="title-card">
                                                        <div class="flex-header">
                                                            <h5 class="position">
                                                                <a id="JOB_CARD_BUTTON_SIMILAR-32545" asp-controller="JobPosts" asp-action="Details" asp-route-id="@item.JobPostId">
                                                                @Html.DisplayFor(modelItem =>item.JobPost.NameJob)
                                                                </a>
                                                            </h5>
                                                        </div>
                                                            <a class="title-company-name" id="JOB_CARD_BUTTON_SIMILAR-32545" asp-controller="Companies" asp-action="Details" asp-route-id="@item.JobPost.CompanyId">
                                                            @Html.DisplayFor(p => item.JobPost.Company.CompanyName)
                                                            </a>
                                                        <div class="d-flex align-items-center justify-content-between">
                                                            <div class="job-locations">
                                                                <div class="location">
                                                                    <span>@Html.DisplayFor(p=>item.JobPost.Company.City)</span>
                                                                </div>
                                                            </div>
                                                            <div class="time">
                                                                @item.JobPost.CreatedDate.Day/@item.JobPost.CreatedDate.Month/@item.JobPost.CreatedDate.Year
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="skill-area d-block">
                                                    <div class="skill-list d-flex">
                                                    @foreach(var skill in item.JobPost.JobTypeActivities)
                                                    {
                                                        <div class="skill-item">
                                                            <div class="skill-text">
                                                                <a asp-controller="JobPosts" asp-action="GetAllJobPosts" asp-route-JobTypeId="@skill.JobType.Id">
                                                                    @skill.JobType.JobType1
                                                                </a>
                                                            </div>
                                                        </div>
                                                    }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                    </div>
                </div>
            </div>
        </div>
     </div>
</div>