@model IEnumerable<JobPortal.Models.JobType>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách ngành/nghề</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm ngành/nghề mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên ngành/nghề
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobType1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
