@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<div class="jsx-3272395647 your-account_form-header__17u4l">
        <h3>Xóa tài khoản</h3>
    </div>
    <hr />
<div class="p-4">
    <div class="alert alert-warning" role="alert">
    <p>
        <strong>Việc xóa dữ liệu này sẽ xóa vĩnh viễn tài khoản của bạn và điều này không thể được khôi phục.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Nhập mật khẩu xác nhân xóa tài khoản</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Đóng tài khoản và xóa dữ liệu tài khoản này!</button>
    </form>
</div>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
